pipeline {
    agent any

    environment {
        JAVA_HOME = tool name: 'jdk17', type: 'jdk'
        MAVEN_HOME = tool name: 'maven3', type: 'maven'
        PATH = "${JAVA_HOME}/bin:${MAVEN_HOME}/bin:${env.PATH}"

        // Configuration SonarQube
        SONAR_HOST_URL = 'http://localhost:9000'
        SONAR_PROJECT_KEY = 'medicore'
        SONAR_PROJECT_NAME = 'MediCore Healthcare Platform'
    }

    options {
        timestamps()
        ansiColor('xterm')
        buildDiscarder(logRotator(numToKeepStr: '20'))
        timeout(time: 30, unit: 'MINUTES')
    }

    stages {
        stage('Checkout') {
            steps {
                checkout scm
                echo "üì• Code r√©cup√©r√© avec succ√®s"
            }
        }

        stage('Build & Unit Tests') {
            steps {
                echo "üî® Compilation et tests unitaires..."
                script {
                    def services = [
                        'api-gateway',
                        'auth-service',
                        'cabinet-service',
                        'patient-service',
                        'rendezVous-service',
                        'facture-service',
                        'consultation-service',
                        'medicament-service'
                    ]

                    for (service in services) {
                        dir(service) {
                            sh 'mvn -B clean test'
                        }
                    }
                }
            }
            post {
                always {
                    junit allowEmptyResults: true, testResults: '**/target/surefire-reports/*.xml'
                }
            }
        }

        stage('Code Coverage (JaCoCo)') {
            steps {
                echo "üìä G√©n√©ration des rapports de couverture..."
                script {
                    def services = [
                        'api-gateway',
                        'auth-service',
                        'cabinet-service',
                        'patient-service',
                        'rendezVous-service',
                        'facture-service',
                        'consultation-service',
                        'medicament-service'
                    ]

                    for (service in services) {
                        dir(service) {
                            sh 'mvn -B jacoco:prepare-agent test jacoco:report'
                        }
                    }
                }
            }
            post {
                always {
                    jacoco(
                        execPattern: '**/target/jacoco.exec',
                        classPattern: '**/target/classes',
                        sourcePattern: '**/src/main/java'
                    )
                }
            }
        }

        stage('SonarQube Analysis') {
            steps {
                echo "üîç Analyse SonarQube en cours..."
                withSonarQubeEnv('SonarQube') {
                    script {
                        def services = [
                            'api-gateway',
                            'auth-service',
                            'cabinet-service',
                            'patient-service',
                            'rendezVous-service',
                            'facture-service',
                            'consultation-service',
                            'medicament-service'
                        ]

                        for (service in services) {
                            dir(service) {
                                sh """
                                    mvn -B sonar:sonar \
                                        -Dsonar.projectKey=${SONAR_PROJECT_KEY}-${service} \
                                        -Dsonar.projectName="${SONAR_PROJECT_NAME} - ${service}" \
                                        -Dsonar.host.url=${SONAR_HOST_URL} \
                                        -Dsonar.java.coveragePlugin=jacoco \
                                        -Dsonar.coverage.jacoco.xmlReportPaths=target/site/jacoco/jacoco.xml \
                                        -Dsonar.java.source=17
                                """
                            }
                        }
                    }
                }
            }
        }

        stage('Quality Gate') {
            steps {
                echo "‚è≥ Attente du Quality Gate SonarQube..."
                timeout(time: 5, unit: 'MINUTES') {
                    waitForQualityGate abortPipeline: true
                }
            }
        }

        stage('Package') {
            steps {
                echo "üì¶ Cr√©ation des packages..."
                script {
                    def services = [
                        'api-gateway',
                        'auth-service',
                        'cabinet-service',
                        'patient-service',
                        'rendezVous-service',
                        'facture-service',
                        'consultation-service',
                        'medicament-service'
                    ]

                    for (service in services) {
                        dir(service) {
                            sh 'mvn -B -DskipTests package'
                        }
                    }
                }
            }
            post {
                success {
                    archiveArtifacts artifacts: '**/target/*.jar', fingerprint: true
                }
            }
        }

        stage('Docker Build') {
            when {
                branch 'main'
            }
            steps {
                echo "üê≥ Construction des images Docker..."
                script {
                    def services = [
                        'api-gateway',
                        'auth-service',
                        'cabinet-service',
                        'patient-service',
                        'rendezVous-service',
                        'facture-service',
                        'consultation-service',
                        'medicament-service'
                    ]

                    for (service in services) {
                        dir(service) {
                            sh "docker build -t medicore/${service}:${BUILD_NUMBER} ."
                            sh "docker tag medicore/${service}:${BUILD_NUMBER} medicore/${service}:latest"
                        }
                    }
                }
            }
        }
    }

    post {
        success {
            echo '‚úÖ Pipeline termin√© avec succ√®s!'
            // Notification Slack/Email si configur√©
            // slackSend channel: '#ci-cd', color: 'good', message: "Build SUCCESS: ${env.JOB_NAME} #${env.BUILD_NUMBER}"
        }
        failure {
            echo '‚ùå Pipeline √©chou√©!'
            // slackSend channel: '#ci-cd', color: 'danger', message: "Build FAILED: ${env.JOB_NAME} #${env.BUILD_NUMBER}"
        }
        always {
            cleanWs()
        }
    }
}